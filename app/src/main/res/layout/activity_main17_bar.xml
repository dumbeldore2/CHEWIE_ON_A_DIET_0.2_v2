<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/but_15" />

    <TextView
        android:id="@+id/list_item_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center"
        android:text="Y"
        android:textColor="@color/blauw"
        android:textSize="96dp"
        android:layout_alignBottom="@id/image_listview"
        android:layout_alignTop="@id/image_listview"
        android:layout_alignLeft="@id/image_listview"
        android:layout_alignRight="@id/image_listview"/>
</RelativeLayout>