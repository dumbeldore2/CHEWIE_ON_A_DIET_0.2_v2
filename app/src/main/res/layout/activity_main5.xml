<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:background="@drawable/background_1">

    <TextView
        android:id="@+id/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/roboto_slab"
        android:text="A"
        android:textSize="90dp"
        android:transitionName="3_1"
        android:textColor="@color/wit"/>

    <TextView
        android:id="@+id/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/roboto_slab"
        android:text="dd"
        android:textColor="@color/wit"
        android:textSize="45dp"
        android:transitionName="3_2"
        app:layout_constraintBottom_toBottomOf="@id/text_1"
        app:layout_constraintStart_toEndOf="@id/text_1" />

    <ImageView
        android:id="@+id/dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/circle_1"
        android:transitionName="3_3"/>

    <TextView
        android:id="@+id/dashboard_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dashboard"
        app:layout_constraintEnd_toEndOf="@id/dashboard"
        app:layout_constraintTop_toTopOf="@id/dashboard"
        app:layout_constraintBottom_toBottomOf="@id/dashboard"
        android:fontFamily="@font/roboto_slab"
        android:text="dashboard"
        android:textColor="@color/wit"
        android:textSize="14dp"
        android:transitionName="3_4"/>
</androidx.constraintlayout.widget.ConstraintLayout>